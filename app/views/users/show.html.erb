
	
<div class="row">
  <div class="card col m-3">
    <h3 class="text-center">Upcoming Events: </h1>
      <% if @upcoming_events %>
          <ul>
            <% @upcoming_events.each do |event| %>
              <li class="box">
                <%= link_to  event.name , event_path(event.id) %>
                <%= content_tag(:p, "#{event.date.localtime.strftime("%a, %b %d, %Y")}  -  #{event.date.localtime.strftime("%I:%M %P")}", class: "date-time") %>
              </li>
            <% end %>
          </ul>

      <% end %>
  </div>

  <div class="card col m-3">
    <h3 class="text-center">Past events: </h1>
     
  </div>

  <div class="card col m-3">
    <h3 class="text-center">Created events: </h1>
     
          <ul>
            <% @created_events.each do |event| %>
              <li class="box">
                <%= link_to  event.name , event_path(event.id) %>
                <%= content_tag(:p, "#{event.date.localtime.strftime("%a, %b %d, %Y")}  -  #{event.date.localtime.strftime("%I:%M %P")}", class: "date-time") %>
              </li>
            <% end %>
          </ul>     
  </div>
</div>

